config REALTEK_BEE_ADC
	bool "Realtek Bee MCU adc driver"
	default n

	select REALTEK_BEE_RCC
	select REALTEK_BEE_PINMUX
	select REALTEK_BEE_NVIC

	help
	  This option enables the adc driver for Realtek Bee MCU.
