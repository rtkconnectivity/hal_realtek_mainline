config REALTEK_BEE_SPI
	bool "Realtek Bee MCU spi driver"
	default n

	select REALTEK_BEE_RCC
	select REALTEK_BEE_PINMUX
	select REALTEK_BEE_NVIC

	help
	  This option enables the spi driver for Realtek Bee MCU.
