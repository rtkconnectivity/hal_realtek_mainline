config REALTEK_BEE_IR
	bool "Realtek Bee MCU ir driver"
	default n

	select REALTEK_BEE_RCC
	select REALTEK_BEE_PINMUX
	select REALTEK_BEE_NVIC

	help
	  This option enables the ir driver for Realtek Bee MCU.
